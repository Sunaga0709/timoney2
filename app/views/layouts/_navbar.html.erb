<header class="mb-3">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid ps-4">
      <a class="navbar-brand" href="/">Timoney</a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
        
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% unless logged_in? %>
            <li class="nav-item">
              <%= link_to 'ログイン', login_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ユーザ登録', signup_path, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to current_user.name, current_user, class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
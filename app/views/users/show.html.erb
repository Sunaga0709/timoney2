<div class="row text-center justify-content-center">
  <h1 class="my-3">ユーザ詳細</h1>
 
  <div class="col-sm-12 col-md-6">
    <table class="table table-bordered table-striped">
      <tr>
        <th>ユーザ名</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
  
  <div class="d-flex justify-content-center">
      <%= link_to '予定一覧', root_path, class: 'btn btn-outline-secondary' %>
      <%= link_to '編集', edit_user_path(@user), class: 'btn btn-primary mx-3' %>
      <%= link_to '削除', user_path(@user), method: :delete, data: {confirm: "#{@user.name}さんの登録した情報全て削除されますがよろしいですか？"}, class: 'btn btn-danger' %>
  </div>
</div>


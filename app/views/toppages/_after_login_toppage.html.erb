<div class="border border-2">
  <%= render 'layouts/tabs' %>
  
  <%= month_calendar events: @schedules do |date, schedules| %>
    <%= date.day %>
    <% schedules.each do |schedule| %>
      <div>
        <%= link_to schedule.name, schedule_path(schedule) %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="col-sm-5">
  <%= form_with scope: :session, local: true do |f| %>
    <div class="form-group mb-3">
      <%= f.label 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
      
    <div class="form-group mb-3">
      <%= f.label 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <%= f.submit 'ログイン', class: 'btn btn-primary w-100' %>
  <% end %>
</div>
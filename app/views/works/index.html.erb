<div class="border border-2">
  <%= render 'layouts/tabs' %>
  
  <div class="d-flex justify-content-around mt-2 pt-2">
    <div>
      <h3>　　　　</h3>
    </div>
    
    <div class="ms-4">
      <h3><%= "勤務先" %></h3>
    </div> 
    
    <div>
      <div class="ms-5">
        <%= link_to '勤務先登録', new_work_path, class: 'btn btn-sm btn-outline-primary' %>
      </div>
    </div>
  </div>

  <% if @works.any? %>
    <table class="table table-bordered table-striped text-center">
      <thead>
        <tr class="table-primary">
          <th style="width: 33%">会社名</th>
          <th style="width: 33%">給与</th>
          <th style="width: 33%">交通費</th>
        </tr>
      </thead>
      
      <tbody>
        <% @works.each do |work| %>
          <tr>
            <td><%= link_to work.name, work_path(work) %></td>
            <td><%= "#{work.wage_type_i18n} #{work.wage}円" %></td>
            <td><%= "#{work.carfare_type_i18n} #{work.carfare}円" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="border-top border-2">
      <h5 class="text-center text-danger mt-2">勤務先情報は登録されていません</h5>
    </div>
  <% end %>
</div>

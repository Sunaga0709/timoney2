<div class="row text-center justify-content-center">
  <h1 class="my-3">勤務先詳細</h1>
  
  <div class="col-sm-12 col-md-6">
    <table class="table table-bordered table-striped">
      <tr>
        <th>会社名</td>
        <td><%= @work.name %></td>
      </tr>
      <tr>
        <th>給与</td>
        <td><%= "#{@work.wage_type_i18n} #{@work.wage}円" %></td>
      </tr>
      <tr>
        <th>交通費</td>
        <td><%= "#{@work.carfare_type_i18n} #{@work.carfare}円" %></td>
      </tr>
    </table>
  </div>
  
  <div class="d-flex justify-content-center">
    <%= link_to '勤務先一覧', works_path, class: 'btn btn-outline-secondary' %>
    <%= link_to '編集', edit_work_path(@work), class: 'btn btn-primary mx-3' %>
    <%= link_to '削除', work_path(@work), method: :delete, data: {confirm: "削除してよろしいですか？"}, class: 'btn btn-danger' %>
  </div>
</div>
